<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gbm.mgb.domain.rbac.UserRoleRepository">

    <resultMap id="RolesMap" type="com.gbm.mgb.domain.rbac.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>

    <select id="getRolesByUserId" resultMap="RolesMap" parameterType="int">
      SELECT b.id,b.name FROM gbm_seed_user_role a,gbm_seed_role b WHERE a.user_id = #{userId} AND a.role_id = b.id
    </select>

</mapper>
